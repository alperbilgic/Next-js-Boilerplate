{
  "model": "claude-sonnet-4-20250514",
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,
  "enableAllProjectMcpServers": true,
  "env": {
    "CLAUDE_AUTO_MODE": "true",
    "CLAUDE_CONTEXT_OPTIMIZATION": "true"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/context-optimization.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-quality-check.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(git:*)",
      "Bash(npx:*)",
      "Bash(next:*)",
      "Bash(node:*)",
      "Bash(bun:*)",
      "Bash(shadcn:*)",
      "Edit",
      "Read",
      "Write",
      "Grep",
      "Glob"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Write(node_modules/**)",
      "Write(.git/**)",
      "Write(*.log)",
      "Write(.next/**)",
      "Write(out/**)",
      "Edit(node_modules/**)",
      "Edit(.git/**)"
    ],
    "defaultMode": "acceptEdits"
  }
}
